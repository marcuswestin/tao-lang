{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["../shared/shared-src/*"],
      "@tao-compiler/*": ["../compiler/compiler-src/*"],
      "@tao-formatter/*": ["../compiler/formatter/formatter-src/*"],
      "@tao-cli/*": ["../tao-cli/cli-src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "app/_gen-runtime-tests/**/*"
  ]
}
