action LogEvent {
    Log "LogEvent: " + event.message
}

handler LoginUser -> username string, password string {
    Session.login(username, password)
}

view Text {}
view Col {}

view LoginScreen {
    Text value "Login"
    LoginForm {
        on submit -> LoginUser
    }
}

view Button title string {
    event press
    // emits on press -> void
}

view LoginForm {
    type Username like Text
        with validation text.length > 3 "Username must be longer"
        with default ""
    type Password like Text with
        validation text.length > 6 "Password must be longer"
    
    emits submit with Username, Password

    Col {
        state Username
        state Password
        Text "Username"
        TextInput username
        Text "Password"
        TextInput password
        Button "Login" {
            on press -> {
                emit submit Username(username), Password(password)
            }
        }
    }
}
