view LoginForm {
    does submit username string, password string

    Col {
        on render -> event RenderEvent {
            Log "LoginForm rendered"
        }

        state username = ""
        Text "Username"
        TextInput username
        state password = ""
        Text "Password"
        TextInput password
        Button "Login" {
            on press -> SubmitHandler(username, password)
        }
    }
}


view Foo {
    event submit -> SubmitHandler message string
    
    Button {
        handler HoverHandler -> event HoverEvent {
            Log "Hovering: " + message
        }
        on press -> {
            notify SubmitHandler "Hello, World!"
        }
        on hover -> HoverHandler
    }
}
handler SubmitHandler -> event String {
    Log "Submitted: " + message
}


